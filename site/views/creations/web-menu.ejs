<% layout('../templates/layout') -%>

<main id="webMenu" class="creationsMenu">
	<section class="projectSort">
		<h2 class="col-md-10">Web Projects</h2>
		<!-- <form role="form" class="col-md-2">
			<select class="form-control">
				<option selected>Most Recent</option>
				<option>Alphabetical</option>
			</select>
		</form> -->
	</section>
	<section class="projects col-xs-12">
		<% for(var i=0;i<creations.length;i++){ %>
			<% if(creations[i].section == 'web'){ %>
			<article id="<%= creations[i].name %>" class="col-xs-12" style="border-top: 20px solid <%= creations[i].colors[0] %>;">
				<div class="imgContainer col-xs-12 col-md-7">
					<a href="/creations/project?p=<%= creations[i].name %>"><img src="<%= creations[i].images.medium %>"></a>
				</div>
				<div class="projectSummary col-xs-12 col-md-5">
					<h3><a href="/creations/project?p=<%= creations[i].name %>"><%= creations[i].name %><br><small><%= creations[i].type %></small></a></h3>
					<h4><a href="/creations/project?p=<%= creations[i].name %>"><%= creations[i].url %></a></h4>
					<a href="/creations/project?p=<%= creations[i].name %>" class="btn btn-primary col-xs-12">View Project</a>
					<div class="codeDependencies col-xs-12 text-center">
						<ul>
							<% for(var j=0;j<creations[i].languages.length;j++){ %>
							<li>
								<img src="http://res.cloudinary.com/hollyspringsteen/image/upload/v1419733026/<%= creations[i].languages[j] %>.png">
							</li>
							<% } %>
						</ul>
					</div>
					<p>
						<%= creations[i].position %>
						<br><br>
						<%= creations[i].description %>
					</p>
				</div>
			</article>
			<% } %>
		<% } %>
	</section>
</main>